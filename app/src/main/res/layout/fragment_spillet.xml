<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Spillet">


    <ImageView
        android:id="@+id/galgen"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="0"
        android:background="@android:color/white"
        android:contentDescription="@string/Galgen"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/the_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:layout_weight="4"
        android:fontFamily="sans-serif-smallcaps"
        android:lineSpacingExtra="10sp"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="4"
        android:fontFamily="-"
        android:lineSpacingExtra="10sp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/darkDarkGrey"
        android:textSize="18sp" />


    <!--Tastaturet, margin er sat fordi jeg oplevede at tastaturet forskÃ¸d naturligt til venstre side, og der er derfor start margin for at korrigere dette-->
    <GridView
        android:id="@+id/letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="2"
        android:fadingEdge="none"
        android:horizontalSpacing="3.5dp"
        android:numColumns="6"
        android:paddingStart="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

</LinearLayout>

